<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.library.controller.SignupController"
prefHeight="900" prefWidth="600"
>
    <GridPane vgap="10" hgap="10" alignment="CENTER">
        <padding><Insets top="20" right="20" bottom="10" left="20"/></padding>
        
        <Text text="Sign Up" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"/>

        <Label text="First Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        
        <Label text="Last Name:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="ID Number:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="idNumberField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        
        <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        
        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
        <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

        
        
        <Button text="Sign Up" onAction="#handleSignup" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
    </GridPane>
</VBox>
