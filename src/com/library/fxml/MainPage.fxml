<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Pos?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.library.controller.MainPageController"
      alignment="TOP_CENTER" spacing="20" style="-fx-background-color: #f0f0f0;" prefHeight="600" prefWidth="500">
      
    <!-- Library Title -->
    <Label text="Library System" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
    
    <!-- Buttons aligned and styled -->
    <VBox spacing="15" alignment="CENTER">
        <Button text="Search Books" onAction="#searchBooks"
                style="-fx-font-weight: bold; -fx-background-color: #2196F3; -fx-text-fill: white; -fx-padding: 10px; -fx-background-radius: 5;" 
                prefWidth="200" /> 

        <Button text="Add New Book" onAction="#openBookInsertionPage"
                style="-fx-font-weight: bold; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10px; -fx-background-radius: 5;" 
                prefWidth="200" />
         <Button text="Add New Genre" onAction="#openGenreInsertionPage"
                style="-fx-font-weight: bold; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10px; -fx-background-radius: 5;" 
                prefWidth="200" />
        <Button text="Show Books" onAction="#showAllBooks"
                style="-fx-font-weight: bold; -fx-background-color: #2196F3; -fx-text-fill: white; -fx-padding: 10px; -fx-background-radius: 5;" 
                prefWidth="200" />
        <Button text="Show Genres" onAction="#showAllGenres"
                style="-fx-font-weight: bold; -fx-background-color: #2196F3; -fx-text-fill: white; -fx-padding: 10px; -fx-background-radius: 5;" 
                prefWidth="200" />
        <Button text="Show Loans" onAction="#showAllLoans"
                style="-fx-font-weight: bold; -fx-background-color: #2196F3; -fx-text-fill: white; -fx-padding: 10px; -fx-background-radius: 5;" 
                prefWidth="200" />
        <Button text="Show Reviews" onAction="#showAllReviews"
                style="-fx-font-weight: bold; -fx-background-color: #2196F3; -fx-text-fill: white; -fx-padding: 10px; -fx-background-radius: 5;" 
                prefWidth="200" />                
    </VBox>
</VBox>
